<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_hangman"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.isaiahrawlinson.whatsplaying.Hangman">

    <TextView
        android:text="The word so far:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <TextView
            android:id="@+id/word"
            android:textSize="10pt"
            android:gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <TextView
            android:id="@+id/game_display"
            android:gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="8pt"
            android:ems="10" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:text="A"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_a"
            android:onClick="letterClick"/>

        <Button
            android:layout_weight="1"
            android:text="B"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_b"
            android:onClick="letterClick"/>

        <Button
            android:layout_weight="1"
            android:text="C"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_c"
            android:onClick="letterClick"/>

        <Button
            android:layout_weight="1"
            android:text="D"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_d"
            android:onClick="letterClick"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:text="E"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_e"
            android:layout_weight="1"
            android:onClick="letterClick"/>

        <Button
            android:text="F"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_f"
            android:layout_weight="1"
            android:onClick="letterClick"/>

        <Button
            android:text="G"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_g"
            android:layout_weight="1"
            android:onClick="letterClick"/>

        <Button
            android:text="H"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_h"
            android:layout_weight="1"
            android:onClick="letterClick"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:text="I"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_i"
            android:layout_weight="1"
            android:onClick="letterClick"/>

        <Button
            android:text="J"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_j"
            android:layout_weight="1"
            android:onClick="letterClick"/>

        <Button
            android:text="K"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_k"
            android:layout_weight="1"
            android:onClick="letterClick" />

        <Button
            android:text="L"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_l"
            android:layout_weight="1"
            android:onClick="letterClick" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:text="M"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_m"
            android:layout_weight="1"
            android:onClick="letterClick"/>

        <Button
            android:text="N"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_n"
            android:layout_weight="1"
            android:onClick="letterClick"/>

        <Button
            android:text="O"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_o"
            android:layout_weight="1"
            android:onClick="letterClick"/>

        <Button
            android:text="P"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_p"
            android:layout_weight="1"
            android:onClick="letterClick"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:text="Q"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_q"
            android:layout_weight="1"
            android:onClick="letterClick"/>

        <Button
            android:text="R"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_r"
            android:layout_weight="1"
            android:onClick="letterClick"/>

        <Button
            android:text="S"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_s"
            android:layout_weight="1"
            android:onClick="letterClick"/>

        <Button
            android:text="T"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_t"
            android:layout_weight="1"
            android:onClick="letterClick"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:text="U"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_u"
            android:layout_weight="1"
            android:onClick="letterClick"/>

        <Button
            android:text="V"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_v"
            android:layout_weight="1"
            android:onClick="letterClick"/>

        <Button
            android:text="W"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_w"
            android:layout_weight="1"
            android:onClick="letterClick"/>

        <Button
            android:text="X"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_x"
            android:layout_weight="1"
            android:onClick="letterClick"/>

    </LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp">

        <Button
            android:text="Y"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_y"
            android:layout_weight="1"
            android:onClick="letterClick"/>

        <Button
            android:text="Z"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_z"
            android:layout_weight="1"
            android:onClick="letterClick"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:visibility="invisible"
            style="@style/Widget.AppCompat.Button.Borderless" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:visibility="invisible"
            style="@style/Widget.AppCompat.Button.Borderless" />

        <!--<Button
            android:text="RESET"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_reset"
            android:layout_weight="2"
            android:onClick="resetClick"/>-->

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end">

        <Button
            android:text="Again?"
            android:id="@+id/button_reset"
            android:onClick="resetClick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>


</LinearLayout>
