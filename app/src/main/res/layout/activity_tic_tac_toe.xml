<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/activity_tic_tac_toe"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.isaiahrawlinson.whatsplaying.TicTacToe">

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:layout_gravity="center">

        <Button
            android:id="@+id/r0c0"
            android:tag="00"
            android:textSize="@dimen/ttt_button_font"
            android:layout_width="@dimen/ttt_button_dimension"
            android:layout_height="@dimen/ttt_button_dimension"
            android:layout_row="0"
            android:layout_column="0"
            />

        <Button
            android:id="@+id/r0c1"
            android:tag="01"
            android:textSize="@dimen/ttt_button_font"
            android:layout_width="@dimen/ttt_button_dimension"
            android:layout_height="@dimen/ttt_button_dimension"
            android:layout_row="0"
            android:layout_column="1"
            />

        <Button
            android:id="@+id/r0c2"
            android:tag="02"
            android:textSize="@dimen/ttt_button_font"
            android:layout_width="@dimen/ttt_button_dimension"
            android:layout_height="@dimen/ttt_button_dimension"
            android:layout_row="0"
            android:layout_column="2"
            />

        <Button
            android:id="@+id/r1c0"
            android:tag="10"
            android:textSize="@dimen/ttt_button_font"
            android:layout_width="@dimen/ttt_button_dimension"
            android:layout_height="@dimen/ttt_button_dimension"
            android:layout_row="1"
            android:layout_column="0"
            />

        <Button
            android:id="@+id/r1c1"
            android:tag="11"
            android:textSize="@dimen/ttt_button_font"
            android:layout_width="@dimen/ttt_button_dimension"
            android:layout_height="@dimen/ttt_button_dimension"
            android:layout_row="1"
            android:layout_column="1"
            />

        <Button
            android:id="@+id/r1c2"
            android:tag="12"
            android:textSize="@dimen/ttt_button_font"
            android:layout_width="@dimen/ttt_button_dimension"
            android:layout_height="@dimen/ttt_button_dimension"
            android:layout_row="1"
            android:layout_column="2"
            />

        <Button
            android:id="@+id/r2c0"
            android:tag="20"
            android:textSize="@dimen/ttt_button_font"
            android:layout_width="@dimen/ttt_button_dimension"
            android:layout_height="@dimen/ttt_button_dimension"
            android:layout_row="2"
            android:layout_column="0"
            />

        <Button
            android:id="@+id/r2c1"
            android:tag="21"
            android:textSize="@dimen/ttt_button_font"
            android:layout_width="@dimen/ttt_button_dimension"
            android:layout_height="@dimen/ttt_button_dimension"
            android:layout_row="2"
            android:layout_column="1"
            />

        <Button
            android:id="@+id/r2c2"
            android:tag="22"
            android:textSize="@dimen/ttt_button_font"
            android:layout_width="@dimen/ttt_button_dimension"
            android:layout_height="@dimen/ttt_button_dimension"
            android:layout_row="2"
            android:layout_column="2"
            />

    </GridLayout>

    <TextView
        android:id="@+id/game_prompt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="10pt"
        android:paddingBottom="10dp"
        android:text="Click a button to start"/>

    <TextView
        android:id="@+id/score_board"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="10pt"
        android:paddingBottom="10dp" />

    <Button
        android:id="@+id/reset"
        android:text="Again?"
        android:onClick="resetClick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>
